<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>lk.dushan.example.osgi.cxf.core</groupId>
        <artifactId>core</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <groupId>lk.dushan.example.osgi.cxf.core.rest</groupId>
    <artifactId>rest</artifactId>
    <name>rest</name>
    <packaging>bundle</packaging>
    <url>https://github.com/dushanlk/osgi-cxf-karaf-example</url>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.service.component.annotations</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.ws.rs</groupId>
            <artifactId>javax.ws.rs-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-frontend-jaxrs</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.jaxrs</groupId>
            <artifactId>jackson-jaxrs-json-provider</artifactId>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.core</groupId>
            <artifactId>jersey-client</artifactId>
        </dependency>
        <dependency>
            <groupId>lk.dushan.example.osgi.cxf.core.service</groupId>
            <artifactId>service</artifactId>
        </dependency>
        <dependency>
            <groupId>lk.dushan.example.osgi.cxf.core.api</groupId>
            <artifactId>api</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            org.slf4j,
                            lk.dushan.example.osgi.cxf.core.rest,
                            lk.dushan.example.osgi.cxf.core.service,
                            lk.dushan.example.osgi.cxf.core.api,
                            com.fasterxml.jackson.core,
                            com.fasterxml.jackson.core.*,
                            com.fasterxml.jackson.jaxrs.*,
                            com.fasterxml.jackson.jaxrs.base.*,
                            com.fasterxml.jackson.databind,
                            com.fasterxml.jackson.databind.*,
                            com.fasterxml.jackson.annotation,
                            javax.ws.rs.*,
                            javax.net.ssl,
                            javax.management,
                            org.osgi.service.component.annotations,
                            org.glassfish.jersey.*
                        </Export-Package>
                        <Import-Package>
                            org.apache.cxf,
                            org.apache.cxf.jaxrs,
                            org.apache.cxf.jaxrs.impl,
                            org.apache.cxf.binding,
                            org.apache.cxf.transport.servlet,
                            org.apache.cxf.transport.http,
                            com.fasterxml.jackson.core,
                            com.fasterxml.jackson.core.*,
                            com.fasterxml.jackson.jaxrs.*,
                            com.fasterxml.jackson.jaxrs.base.*,
                            com.fasterxml.jackson.databind,
                            com.fasterxml.jackson.databind.*,
                            com.fasterxml.jackson.annotation,
                            javax.ws.rs.*,
                            javax.net.ssl,
                            javax.management,
                            org.osgi.service.component.annotations,
                            org.slf4j,
                            org.glassfish.jersey.*,
                            lk.dushan.example.osgi.cxf.core.service,
                            lk.dushan.example.osgi.cxf.core.api,
                            org.w3c.dom
                        </Import-Package>
                        <_dsannotations>*</_dsannotations>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
